{
  "compilerOptions": {
    "checkJs": true,
    "noEmit": true,
    "target": "es2022", // need for using for...of on iterables and named groups in regex
    "lib": ["es2022"],
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node16",
    "module": "node16"
  },
  "include": ["**/*.js"]
}
